{% extends 'templates/_document.twig' %}

{% block content %}
    <div class="container">
        <h1>
            {{term.name}}
        </h1>

        <div class="contentTabs">
            {% for tab in tabs %}
                {% set term_id = tab.term_id %}
                <div class="contentTabs_item">
                    <h3>{{tab.name}}</h3>
                    <div class="contentTabs_item__todo" data-term-id="{{tab.term_id}}">
                        {% for post in tab.posts({
                            posts_per_page: -1,
                            orderby: 'menu_order',
                            order: 'ASC',
                        }) %}
                            <div class="contentTabs_item__todoItem" data-id="{{post.id}}">
                                <div class="contentTabs_item__todoItem_title">
                                    {{post.title}}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
  
{% endblock %}
