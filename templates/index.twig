{% extends contentOnly ? 'templates/_contentOnly.twig' : 'templates/_document.twig' %}

{% block content %}
  {% if current_user.user_login is empty %}
    <div class="container login">
      <h1>
        Effettua il login
      </h1>
      <div class="form">
        <form action="{{ site.link }}" method="post" class="sign-in">
        <p>
            <label for="user-name">Nome utente</label><br />
            <input type="text" name="user-name" id="user-name" value="" />
        </p>
        <p>
            <label for="password">Password</label><br />
            <input type="password" name="password" id="password" />
        </p>
        {% if action == 'log-in' %}
        <p class="errorLogin">
          Errore!!<br>
          Non Ã¨ stato possibile effettuare il login.<br>
          Controlla i dati inseriti.
        </p>
        {% endif %}
        <p>
            <input type="submit" name="submit" value="Accedi" />
            <input type="hidden" name="action" value="log-in" />
        </p>   
    </form>
      </div>
    </div>
  {% else %}
    <div class="container home">      
      {% if mainSite %}
        <h1>Ciao {{ current_user.user_login }}</h1>
        <div class="listProject row">
          {% for project in projects %}
            <div class="listProject_item col-lg-4 col-6">
              <div class="listProject_item__title">
                {{project.blogname}}
              </div>
              <a href="{{project.link}}"></a>
            </div>
          {% endfor %}
        </div>        
      {% endif %}
    </div>
  {% endif %}

{% endblock %}
